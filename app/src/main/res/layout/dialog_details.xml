<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="400dp">

    <RelativeLayout
        android:id="@+id/toolbar_details"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/back_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/back"
            android:focusable="false" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_details"
        android:background="@color/grey"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_project_dialog_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/project_name" />

            <TextView
                android:id="@+id/details_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_project_dialog_name"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_details_time"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="时间"/>

            <TextView
                android:id="@+id/details_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_details_time"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_marginVertical="3dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/button1_details"
                    android:text="散客"
                    android:button="@null"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:background="@drawable/click_button"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/button2_details"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/click_button"
                    android:text="会员"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/button1_details"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_details_price"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="售价"/>

            <TextView
                android:id="@+id/details_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_details_price"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/edit_price"
                android:layout_alignParentEnd="true"
                android:text="修改"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_details_user"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="技师"/>

            <TextView
                android:id="@+id/details_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="点击选择技师"
                android:layout_toRightOf="@+id/tv_details_user"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:background="@drawable/check_button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="确认"
        android:layout_width="120dp"
        android:layout_height="30dp" />
</RelativeLayout>